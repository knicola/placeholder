{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@knicola/dev-config/tsconfig/node",
  "compilerOptions": {
    "noEmit": true,
    "checkJs": true,
    "types": [ "node", "jest" ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [ "**/*.ts", "**/*.js", "**/*.mjs" ],
  "exclude": [ "node_modules" ],
}
